<Window x:Class="Week5IntroToWpf.GridExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Week5IntroToWpf"
        mc:Ignorable="d"
        Title="GridExample" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="Black" Background="LightYellow" Margin="5" Padding="10" />
        <Label Content="1" Grid.Row="0" Grid.Column="0" FontSize="40"/>

        <Border Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" BorderThickness="1" BorderBrush="Black" Background="LightPink" Margin="5" Padding="10" />
        <Label Content="2" Grid.Row="0" Grid.Column="1" FontSize="40"/>

        <Border Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="2" BorderThickness="1" BorderBrush="Black" Background="MediumPurple" Margin="5" Padding="10" />
        <Label Content="3" Grid.Row="1" Grid.Column="0" FontSize="40"/>

        <Border Grid.Row="1" Grid.Column="2" Grid.RowSpan="2" BorderThickness="1" BorderBrush="Black" Background="LightGreen" Margin="5" Padding="10" />
        <Label Content="4" Grid.Row="1" Grid.Column="2" FontSize="40"/>

        <Border Grid.Row="1" Grid.Column="3" BorderThickness="1" BorderBrush="Black" Background="Orange" Margin="5" Padding="10" />
        <Label Content="5" Grid.Row="1" Grid.Column="3" FontSize="40"/>

        <Border Grid.Row="2" Grid.Column="3" BorderThickness="1" BorderBrush="Black" Background="Cyan" Margin="5" Padding="10" />
        <Label Content="6" Grid.Row="2" Grid.Column="3" FontSize="40"/>
    </Grid>
</Window>
