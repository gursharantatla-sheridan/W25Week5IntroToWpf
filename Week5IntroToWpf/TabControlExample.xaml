<Window x:Class="Week5IntroToWpf.TabControlExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Week5IntroToWpf"
        mc:Ignorable="d"
        Title="TabControlExample" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Personal Info">
                <Canvas>
                    <Label Content="Label" Canvas.Left="43" Canvas.Top="38"/>
                    <TextBox Canvas.Left="86" TextWrapping="Wrap" Text="TextBox" Canvas.Top="42" Width="120"/>
                    <Button Content="Button" Canvas.Left="137" Canvas.Top="83" Height="44" Width="69"/>

                </Canvas>
            </TabItem>

            <TabItem Header="Preferences">
                <Canvas>
                    <RadioButton Content="RadioButton" Canvas.Left="63" Canvas.Top="57"/>
                    <RadioButton Content="RadioButton" Canvas.Left="63" Canvas.Top="93" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    <RadioButton Content="RadioButton" Canvas.Left="63" Canvas.Top="133" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    <Button Content="Button" Canvas.Left="66" Canvas.Top="178" Height="50" Width="82"/>

                </Canvas>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
